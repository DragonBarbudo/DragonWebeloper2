      .col6
        h3 Slider de imagenes: <br> +sliderbg('body', 'imagen1.jpg', 'imagen2.jpg', 'imagen3.jpg')
        +sliderbg('body','http://placehold.it/800x800/aabbff', 'http://placehold.it/800x800/bbffaa', 'http://placehold.it/800x800/ffbbaa')
