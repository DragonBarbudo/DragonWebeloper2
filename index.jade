        .col1 .col1
    .container.grid
      - for(i=0;i<6;i++)
        .col2 .col2  
    .container.grid
      - for(i=0;i<3;i++)
        .col4 .col4 
    .container.grid
      .col6 .col6
      .col6 .col6
    .container.grid
      .col12 .col12
    .container.grid
      .col4 .col4
      .col2 .col2
      .col2 .col2
      .col3 .col3
      .col1 .col1
    .container.grid
      .col3 .col3
      .col7 .col7
      .col2 .col2
