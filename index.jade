      h3.col6 Slider múltiple con Modalbox <br>+slider('multiplebox', 'img1.jpg', 'img2.jpg', 'img3.jpg')
    .container
      .col6
        +slider('multiplebox', 'http://lorempixel.com/400/200', 'http://lorempixel.com/404/200', 'http://lorempixel.com/402/200', 'http://lorempixel.com/403/200', 'http://lorempixel.com/401/200')
    
