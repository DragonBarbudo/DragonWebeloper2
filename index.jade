    // ###################################### HEAD
    
    .container
      h2.col12 Header
    header.container
      .col3
        a(href=domain).logo: img(src="http://lorempixel.com/100/100", alt="")
      .col9
        h3 nav: +menuList('inicio', menu, 'horizontal')
        nav
          +menuList('inicio', menu, 'horizontal')
    
    // ###################################### LIGHTBOX
    .container
      h2.col12 Modalbox : Swipebox
    .container
      .col4
        h3 Imagen <br> a(href="rutadeImagen.jpg").box
        a(href="http://placehold.it/400x300").box
          img(src="http://placehold.it/200x200", alt="").w100
      .col4
        h3 Imagen con titulo <br> a(href="rutadeImagen.jpg", title="Título de imagen").box
        a(href="http://placehold.it/800x200", title="Título de imagen").box
          img(src="http://placehold.it/200x200", alt="").w100
      .col4
        h3 Video <br> a(href=""http://vimeo.com o http://youtube.com URL").box
        a(href="http://vimeo.com/29193046").box
          img(src="https://i.vimeocdn.com/video/236084241_150x84.jpg", alt="").w100

    
    // ###################################### SLIDERS
    
    .container
      h2.col12 Slider : Slick Slider
    .container
      h3.col6.push3 Slider simple <br>+slider('one', 'img1.jpg', 'img2.jpg', 'img3.jpg')
    .container
      .col12
        +slider('one', 'http://lorempixel.com/800/300', 'http://lorempixel.com/804/300', 'http://lorempixel.com/802/300')
    .container
      h3.col6 Slider múltiple <br>+slider('multiple', 'img1.jpg', 'img2.jpg', 'img3.jpg')
      h3.col6 Slider manual con grid <br>.slider.one : div .container : .col4
    .container
      .col6
        +slider('multiple', 'http://lorempixel.com/400/200', 'http://lorempixel.com/404/200', 'http://lorempixel.com/402/200', 'http://lorempixel.com/403/200', 'http://lorempixel.com/401/200')
      .col6
        .slider.one
          div
            .container.grid
                .col4 .col4
                .col4 .col4
                .col4 .col4
          div
            .container.grid
              .col3 .col3
              .col3 .col3
              .col3 .col3
              .col3 .col3
